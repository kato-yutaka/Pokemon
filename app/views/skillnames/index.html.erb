<p id="notice"><%= notice %></p>

<h1>技名</h1>
<table class="table table-striped">

  <thead>
    <tr>
      <th white-space: nowrap>技名</th>
      <th white-space: nowrap>タイプ</th>
      <th white-space: nowrap>分類</th>
      <th white-space: nowrap>威力</th>
      <th white-space: nowrap>命中</th>
      <th white-space: nowrap>PP</th>
      <th white-space: nowrap>直接</th>
      <th white-space: nowrap>対象</th>
      <th white-space: nowrap>効果</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skillnames.each do |skillname| %>
      <tr>
        <td white-space: nowrap><%= skillname.name %></td>
        <td white-space: nowrap><%= skillname.type %></td>
        <td white-space: nowrap><%= skillname.category %></td>
        <td white-space: nowrap><%= skillname.power %></td>
        <td white-space: nowrap><%= skillname.hit %></td>
        <td white-space: nowrap><%= skillname.pp %></td>
        <td white-space: nowrap><%= skillname.direct %></td>
        <td white-space: nowrap><%= skillname.target %></td>
        <td><%= skillname.eff %></td>
		    <% if "#{session[:usrad]}" ==  "true" %>
         <td white-space: nowrap><%= link_to '編集', edit_skillname_path(skillname) %></td>
         <td white-space: nowrap><%= link_to '削除', skillname, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to '新規作成', new_skillname_path %>
