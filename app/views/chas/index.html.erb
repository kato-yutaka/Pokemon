

<p id="notice"><%= notice %></p>

<h1>特性</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>特性名</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chas.each do |cha| %>
      <tr>
        <td white-space: nowrap><%= cha.name %></td>
        <td><%= cha.ex %></td>
<% if "#{session[:usrad]}" ==  "true" %>
        <td><%= link_to '編集', edit_cha_path(cha) %></td>
        <td><%= link_to '削除', cha, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

