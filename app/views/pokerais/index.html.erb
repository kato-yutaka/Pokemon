<div align = "center">
<p id="notice"><%= notice %></p>

<%
unless @user
  @user = User.new
end
%>

<h1>育成論</h1>
<%= form_tag(:action=>"search") do %>
 <%= text_field_tag "search[title]" %>
 <%= submit_tag "検索" %>
 <%= link_to "リセット", pokerais_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>ポケモン</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokerais.each do |pokerai| %>
      <tr>
				<td><%=link_to pokerai.user.name,user_path(pokerai.user_id)%></td>
        <td><%= link_to pokerai.title , pokerai %></td>
        <td><%= pokerai.pokedex.name %></td>
        <td><%= link_to '説明', pokerai %></td>
        <td><%= link_to '編集', edit_pokerai_path(pokerai) %></td>
        <td><%= link_to '削除', pokerai, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if "#{session[:usrname]}" == "" %>

<% else %>
<%= link_to '新規作成', new_pokerai_path %>
<% end %>