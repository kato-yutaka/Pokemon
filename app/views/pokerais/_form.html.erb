<div align = "center">
<%= form_for(@pokerai) do |f| %>
  <% if @pokerai.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pokerai.errors.count, "error") %> prohibited this pokerai from being saved:</h2>

      <ul>
      <% @pokerai.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :投稿者名 %><br>
    <%= f.collection_select :user_id,User.all,:id,:name %>
  </div>
  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :ポケモン %><br>
    <%= f.collection_select :pokedex_id,Pokedex.all,:id,:name %>
  </div>
  <div class="field">
    <%= f.label :HP %><br>
    <%= f.number_field :hp , in: 0...256 %>
  </div>
  <div class="field">
    <%= f.label :攻撃 %><br>
    <%= f.number_field :atk , in: 0...256 %>
  </div>
  <div class="field">
    <%= f.label :防御 %><br>
    <%= f.number_field :def , in: 0...256 %>
  </div>
  <div class="field">
    <%= f.label :特功 %><br>
    <%= f.number_field :satk , in: 0...256 %>
  </div>
  <div class="field">
    <%= f.label :特防 %><br>
    <%= f.number_field :sdef , in: 0...256 %>
  </div>
  <div class="field">
    <%= f.label :素早さ %><br>
    <%= f.number_field :spd , in: 0...256 %>
  </div>


  <div class="field">
    <%= f.label :性格 %><br>
    <%= f.collection_select :per_id,Per.all,:id,:name %>
  </div>
  <div class="field">
    <%= f.label :特性 %><br>
    <%= f.collection_select :cha_id,Cha.all,:id,:name %>
  </div>
  <div class="field">
    <%= f.label :持ち物 %><br>
    <%= f.collection_select :wepon_id,Wepon.all,:id,:name %>
  </div>

  <div class="field">
    <%= f.label :skills, "技" %><br />
    <%= f.fields_for :skills do |skills_form| %>
      <%= skills_form.label :skillname_id, "技" %>
      <%= skills_form.collection_select :skillname_id,Skillname.all,:id,:name %></br>
  <% end %>
  </div>

  <div class="field">
    <%= f.label :raischecktags, "タグ" %><br />
    <%= f.fields_for :raischecktags do |builder| %>
      <%= render "raischecktag_fields", f: builder %>
		<% end %>
  	<%= link_to_add_fields "タグ追加", f, :raischecktags %>
  </div>

  
  <div class="field">
    <%= f.label :説明 %><br>
    <%= f.text_area :ex %>
  </div>
  <div class="actions">
    <%= f.submit :完了%>
  </div>
<% end %>
