<p id="notice"><%= notice %></p>

<%
unless @user
  @user = User.new
end
%>

<%
unless @party
  @party = Party.new
end
%>

<%
unless @pokedex
  @pokedex = Pokedex.new
end
%>


<h1>構築論</h1>

<table>
  <thead>
    <tr>


      <th colspan="3"></th>
    </tr>
  </thead>

<table class="table table-striped">
    <% @pokebuilds.each do |pokebuild| %>
      <tr>
        <td>タイトル:<%= link_to pokebuild.title , pokebuild%></td>
        <td>投稿者名:<%= link_to pokebuild.user.name,user_path(pokebuild.user_id)%></td>
        <td><%= pokebuild.ex %></td>
        <td><%= link_to '説明', pokebuild %></td>
        <td><%= link_to '編集', edit_pokebuild_path(pokebuild) %></td>
        <td><%= link_to '削除', pokebuild, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

