<p id="notice"><%= notice %></p>

<%= link_to '新規作成', new_pokedex_path %>

<h1>ポケモン図鑑</h1>



<%= autocomplete_field_tag :name,
    '',
    autocomplete_pokedex_name_pokedexes_path,
    :class => '',
    :placeholder => '' %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>HP</th>
      <th>攻撃力</th>
      <th>防御力</th>
      <th>特攻</th>
      <th>特防f</th>
      <th>すばやさ</th>
      <th>生態</th>
      <th>卵グループ</th>
      <th>タイプ</th>
      <th>画像</th>
      <th>画像データ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokedexes.each do |pokedex| %>
      <tr>
        <td><%= pokedex.name %></td>
        <td><%= pokedex.hp %></td>
        <td><%= pokedex.atk %></td>
        <td><%= pokedex.def %></td>
        <td><%= pokedex.satk %></td>
        <td><%= pokedex.sdef %></td>
        <td><%= pokedex.spd %></td>
        <td><%= pokedex.eco %></td>
        <td><%= pokedex.egg_id %></td>
        <td><%= pokedex.type_id %></td>
        <td><%= pokedex.pic %></td>

        <td>
　　　　   <%= image_tag show_image_pokedex_path(pokedex) %>
        </td>

        <td><%= link_to '詳細', pokedex %></td>
        <td><%= link_to '編集', edit_pokedex_path(pokedex) %></td>
        <td><%= link_to '削除', pokedex, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


