<p id="notice"><%= notice %></p>

<h1>Listing Pokedexes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hp</th>
      <th>Atk</th>
      <th>Def</th>
      <th>Satk</th>
      <th>Sdef</th>
      <th>Spd</th>
      <th>Eco</th>
      <th>Egg</th>
      <th>Type</th>
      <th>Pic</th>
      <th>Pic data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokedexes.each do |pokedex| %>
      <tr>
        <td><%= pokedex.name %></td>
        <td><%= pokedex.hp %></td>
        <td><%= pokedex.atk %></td>
        <td><%= pokedex.def %></td>
        <td><%= pokedex.satk %></td>
        <td><%= pokedex.sdef %></td>
        <td><%= pokedex.spd %></td>
        <td><%= pokedex.eco %></td>
        <td><%= pokedex.egg_id %></td>
        <td><%= pokedex.type_id %></td>
        <td><%= pokedex.pic %></td>
        <td><%= pokedex.pic_data %></td>
        <td><%= link_to 'Show', pokedex %></td>
        <td><%= link_to 'Edit', edit_pokedex_path(pokedex) %></td>
        <td><%= link_to 'Destroy', pokedex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

